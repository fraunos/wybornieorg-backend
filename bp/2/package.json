{
  "name": "sejmor",
  "version": "1.0.0",
  "description": "Service to grade polish politicians work in order to help voters make decision",
  "main": "index.js",
  "scripts": {
    "build-css": "stylus source/stylesheets/index.styl -o static/css",
    "watch-css": "stylus source/stylesheets/index.styl -o static/css -w",
    "clean": "rm -rf static/css && mkdir -p static/css",
    "build": "npm run clean && npm run build-css",
    "watch": "npm run clean && npm run watch-css & nodemon app -e js,pug,styl",
    "start": "node app"
  },
  "author": "Michal Woloszyn",
  "license": "ISC",
  "dependencies": {
    "koa": "^1.2.4",
    "koa-passport": "^1.3.0",
    "koa-generic-session": "^1.11.4",
    "koa-bodyparser": "^2.3.0",
    "koa-favicon": "^1.2.1",
    "koa-logger": "^1.3.0",
    "koa-mongo": "^0.6.0",
    "koa-pug": "^3.0.0-1",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "koa-stylus": "0.0.3",
    "nodemon": "^1.11.0"
  }
}
